<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.VolleyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volley"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="String Request :"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_string_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image View Request :"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_image_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network ImageView Request with Custom LRU Cache:"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"/>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/networkImageViewWithCustomLRUCache"
            android:layout_width="150dp"
            android:layout_height="170dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JSON request:"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_jsonRequest"
            android:layout_width="150dp"
            android:layout_height="170dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GSON request:"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_gsonRequest"
            android:layout_width="150dp"
            android:layout_height="170dp"
            />
    </LinearLayout>

</ScrollView>
